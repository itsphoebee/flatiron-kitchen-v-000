<%= form_for recipe do |f| %>
  <%=f.label :name %>:
  <%= f.text_field :name%> <br>

  Ingredients: <%= f.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name)%><br>

  <%= f.fields_for :ingredients do |ingredient_fields| %>
    Create a new ingredient: <%= ingredient_fields.text_field :name %><br>
  <% end %>

  <%= f.submit %>
<% end %>
